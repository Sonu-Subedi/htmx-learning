<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://unpkg.com/htmx.org@1.9.5"></script>
  </head>

  <body>
    <div class="editor__title">
      <h4>Input your JSON code</h4>
    </div>
    <div class="editor__options">
      <div
        id="button"
        hx-post="/validate"
        hx-vals='js:{"test": inputeditor.getValue()}'
        hx-trigger="click"
        hx-target="#outputContainer"
      >
        <button
          type="submit"
          class="pro-btn editor__btn pro-btn--compact pro-btn--primary"
          title="Validate"
          id="validateButton"
        >
          Validate
        </button>
      </div>
      <div class="flex">
        <button
          class="pro-btn editor__menu pro-btn--default pro-btn--primary"
          title="Menu"
          onclick="showMenu()"
        >
          <div class="menu-img-wrapper">
            <img
              alt="vertical menu"
              loading="lazy"
              width="18"
              height="18"
              decoding="async"
              data-nimg="1"
              style="color: transparent"
              src="../assets/images/more-vertical.svg"
            />
          </div>
        </button>
      </div>
    </div>

